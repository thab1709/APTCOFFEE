<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.APTCOFFEE" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/BrowPrimary</item>
        <item name="colorPrimaryVariant">@color/BrowPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.APTCoffee.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.APTCoffee.Button.Outlined</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.APTCoffee.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.APTCoffee.Subtitle1</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.APTCoffee.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.APTCoffee.Button</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.APTCoffee.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.APTCoffee.Button</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Text appearances -->
    <style name="TextAppearance.APTCoffee.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.APTCoffee.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.APTCoffee.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>